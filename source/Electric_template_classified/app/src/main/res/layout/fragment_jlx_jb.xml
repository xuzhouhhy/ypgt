        <com.geocraft.electrics.ui.view.UserDefineControlView.BusinessEditText
            android:id="@+id/etSQBM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="@string/jlx_sqbm"
            />

        <TextView
            style="@style/SimpleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jlx_whbz"
            />

        <com.geocraft.electrics.ui.view.UserDefineControlView.BusinessEditText
            android:id="@+id/etWHBZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="@string/jlx_whbz"
            />

        <TextView
            style="@style/SimpleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jlx_tpsblx"
            />

        <com.geocraft.electrics.ui.view.UserDefineControlView.BusinessSpinner
            android:id="@+id/spTPSBLX"
            style="@style/SpinnerStyle"

            android:tag="@string/jlx_tpsblx"
            />
    </LinearLayout>
</ScrollView>