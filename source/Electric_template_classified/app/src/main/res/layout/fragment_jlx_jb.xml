            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jlx_ywxtid"
            />

        <com.geocraft.electrics.ui.view.UserDefineControlView.BusinessIDEditText
            android:id="@+id/etYWXTID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="@string/jlx_ywxtid"
            />

        <TextView
            style="@style/SimpleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jlx_sqbm"
