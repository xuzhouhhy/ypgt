<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <GridView
        android:id="@+id/gridViewCollectType"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="@dimen/grid_view_vertical_interval"
        android:horizontalSpacing="@dimen/grid_view_vertical_interval"
        android:verticalSpacing="@dimen/grid_view_vertical_interval"
        android:numColumns="3"/>
    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_super_large"
        android:textColor="@color/white"
        />

</LinearLayout>