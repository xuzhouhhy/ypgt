<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/SimpleLabel.SimpleLabelRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gldw_first"
        />
    <Spinner
        android:id="@+id/spFirst"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        />
    <TextView
        style="@style/SimpleLabel.SimpleLabelRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gldw_sedong"
        />
    <Spinner
        android:id="@+id/spSecond"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        />
    <TextView
        style="@style/SimpleLabel.SimpleLabelRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gldw_third"
        />
    <Spinner
        android:id="@+id/spThird"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/app_no"
            />
        <Button
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/app_yes"
            />
    </LinearLayout>
</LinearLayout>