        style="@style/SimpleLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/GY_KBSTZXX_F_GYGJDDZ"
        />
    <com.geocraft.electrics.ui.view.UserDefineControlView.BusinessEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/F_GYGJDDZ"
        android:tag="@string/GY_KBSTZXX_F_GYGJDDZ"/>



    <!-- 备用进出线间隔数 -->
    <TextView
        style="@style/SimpleLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/GY_KBSTZXX_F_GYGBYJCXJGS"
        />
    <com.geocraft.electrics.ui.view.UserDefineControlView.BusinessEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/F_GYGBYJCXJGS"
        android:tag="@string/GY_KBSTZXX_F_GYGBYJCXJGS"/>
    </LinearLayout>
</ScrollView>
