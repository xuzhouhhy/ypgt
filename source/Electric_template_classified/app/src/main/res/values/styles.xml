<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="SpinnerStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_heigth</item>
    </style>
    <style name="ActionBarTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_super_large2</item>
    </style>

    <!-- SingleLine LinearLayout -->
    <style name="horizontal_LinearLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/components_height</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/activity_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="listView_item">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_view_menu_width</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_small_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_small_padding</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_small_padding</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_small_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="listView_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_super_large</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_small_padding</item>
    </style>

    <style name="horizontal_LinearLayout.no_marginTop">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="horizontal_LinearLayout_no_padding">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/components_height</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- TextView style of page's tip -->
    <style name="label_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!-- input box style of page -->
    <style name="parameter_EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">end</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="label_TextView.width_uncage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="switch_without_background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SimpleLabel" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/barbk</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="SimpleLabel.SimpleLabelRed">
        <item name="android:textColor">@color/red</item>
    </style>


    <style name="weibo_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">@dimen/activity_vertical_small_padding</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_small_padding</item>
        <item name="android:background">@drawable/weibolist_bottombar_itembg_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@null</item>
    </style>

    <style name="business_editText_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="fragment_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>
